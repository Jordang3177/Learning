<resources>

    <!-- information learned here https://www.tutorialspoint.com/android/android_styles_and_themes.htm -->
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TicTacToeTableRow">
        <item name = "android:layout_width">fill_parent</item>
        <item name = "android:layout_height">wrap_content</item>
        <item name = "android:background">@color/black</item>
        <item name = "android:gravity">center_horizontal</item>
        <item name = "android:clickable">true</item>
    </style>

    <style name="TicTacToeCell">
        <item name = "android:layout_width">wrap_content</item>
        <item name = "android:layout_height">95dp</item>
        <item name = "android:layout_gravity">center</item>
        <item name = "android:gravity">center</item>
        <item name = "android:textSize">64sp</item>
        <item name = "android:background">@color/TicTacToeBackground</item>
        <item name = "android:maxWidth">95dp</item>
        <item name = "android:text">"@string/none"</item>
        <item name = "android:clickable">true</item>
    </style>
    <style name="TicTacToeLeftCell" parent="@style/TicTacToeCell">
        <item name = "android:layout_marginLeft">2dp</item>
        <item name = "android:layout_marginTop">2dp</item>
        <item name = "android:layout_marginRight">1dp</item>
        <item name = "android:layout_marginBottom">2dp</item>
    </style>
    <style name="TicTacToeMiddleCell" parent="@style/TicTacToeCell">
        <item name = "android:layout_marginLeft">1dp</item>
        <item name = "android:layout_marginTop">2dp</item>
        <item name = "android:layout_marginRight">1dp</item>
        <item name = "android:layout_marginBottom">2dp</item>
    </style>
    <style name="TicTacToeRightCell" parent="@style/TicTacToeCell">
        <item name = "android:layout_marginLeft">1dp</item>
        <item name = "android:layout_marginTop">2dp</item>
        <item name = "android:layout_marginRight">2dp</item>
        <item name = "android:layout_marginBottom">2dp</item>
    </style>
    <style name="ChessTableRow">
        <item name = "android:layout_width">wrap_content</item>
        <item name = "android:layout_height">wrap_content</item>
        <item name = "android:background">@color/black</item>
        <item name = "android:gravity">center_horizontal</item>
        <item name = "android:clickable">true</item>
    </style>
    <style name="ChessCell">
        <item name = "android:layout_width">wrap_content</item>
        <item name = "android:layout_height">50dp</item>
        <item name = "android:layout_gravity">center</item>
        <item name = "android:gravity">center</item>
        <item name = "android:background">@color/white</item>
        <item name = "android:clickable">true</item>
    </style>

    <style name="ChessRightCell" parent="ChessCell">
        <item name = "android:layout_marginLeft">1dp</item>
        <item name = "android:layout_marginTop">2dp</item>
        <item name = "android:layout_marginRight">2dp</item>
        <item name = "android:layout_marginBottom">2dp</item>
    </style>
    <style name="ChessLeftCell" parent="ChessCell">
        <item name = "android:layout_marginLeft">2dp</item>
        <item name = "android:layout_marginTop">2dp</item>
        <item name = "android:layout_marginRight">1dp</item>
        <item name = "android:layout_marginBottom">2dp</item>
    </style>
    <style name="ChessMiddleCell" parent="ChessCell">
        <item name = "android:layout_marginLeft">1dp</item>
        <item name = "android:layout_marginTop">2dp</item>
        <item name = "android:layout_marginRight">1dp</item>
        <item name = "android:layout_marginBottom">2dp</item>
    </style>




</resources>
